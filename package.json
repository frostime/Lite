{
	"type": "module",
	"scripts": {
		"release": "npx release-it --no-npm.publish",
		"make-link": "node --no-warnings ./script/make_link.js"
	},
	"dependencies": {
		"@release-it/conventional-changelog": "^7.0.2",
		"release-it": "^16.3.0"
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release v${version}",
			"push": false,
			"getLatestTagFromAllRefs": true
		},
		"npm": {
			"public": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"ignoreRecommendedBump": true,
				"preset": {
					"name": "conventionalcommits",
					"header": "# üìã Êõ¥Êñ∞ÂéÜÂè≤ \n\n",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						},
						{
							"type": "perf",
							"section": "Performance Improvements"
						},
						{
							"type": "revert",
							"section": "Reverts"
						},
						{
							"type": "chore",
							"section": "Chores",
							"hidden": true
						},
						{
							"type": "docs",
							"section": "Documentation"
						},
						{
							"type": "style",
							"section": "Styles",
							"hidden": true
						},
						{
							"type": "refactor",
							"section": "Refactors"
						},
						{
							"type": "test",
							"section": "Tests"
						},
						{
							"type": "build",
							"section": "Build System"
						},
						{
							"type": "ci",
							"section": "Continuous Integration"
						}
					],
					"commitUrlFormat": "https://github.com/mdzz2048/Lite/commit/{{hash}}",
					"compareUrlFormat": "https://github.com/mdzz2048/Lite/compare/{{previousTag}}...{{currentTag}}"
				}
			}
		}
	},
	"version": "1.1.5"
}
